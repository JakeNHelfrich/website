---
type Props = {
  href: string;
}

const { href } = Astro.props;
---

<a href={href} class="inline-flex items-center justify-center size-8 rounded-full text-current hover:text-black dark:hover:text-white hover:bg-black/10 dark:hover:bg-white/10 transition-all duration-300" aria-label="Go back">
  <svg
    xmlns="http://www.w3.org/2000/svg"
    viewBox="0 0 24 24"
    class="size-5 stroke-2 fill-none stroke-current">
    <polyline points="15 18 9 12 15 6" />
  </svg>
</a>
